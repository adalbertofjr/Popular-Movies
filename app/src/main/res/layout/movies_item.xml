<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/poster_card_margin"
        android:layout_marginRight="@dimen/poster_card_margin"
        android:layout_marginTop="@dimen/poster_card_margin"
        cardview:cardCornerRadius="@dimen/poster_card_corner_radius"
        cardview:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_movies_item_poster"
                android:layout_width="@dimen/poster_width"
                android:layout_height="@dimen/poster_height"
                android:contentDescription="@string/movie_poster_description"
                android:scaleType="fitXY" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/vw_movies_item_selected"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/poster_card_margin"
        android:layout_marginLeft="@dimen/poster_card_margin"
        android:layout_marginRight="@dimen/poster_card_margin"
        android:layout_marginTop="6dp"
        android:background="@color/colorAccent" />

</LinearLayout>